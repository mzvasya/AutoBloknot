<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Добавить запись в журнал Автозаправок"
        android:id="@+id/btnAdd_AZS"
        android:onClick="onClickMain"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="106dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Блокнот"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Автовладельца"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Добавить запись в журнал Обслуживания"
        android:id="@+id/btnAdd_STO"
        android:layout_below="@+id/btnAdd_AZS"
        android:layout_centerHorizontal="true"
        android:onClick="onClickMain" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Посмотреть журнал Автозаправок"
        android:id="@+id/btnShow_AZS"
        android:layout_below="@+id/btnAdd_STO"
        android:layout_alignLeft="@+id/btnShow_STO"
        android:layout_alignStart="@+id/btnShow_STO"
        android:layout_marginTop="42dp"
        android:layout_alignRight="@+id/btnShow_STO"
        android:layout_alignEnd="@+id/btnShow_STO"
        android:onClick="onClickMain" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Просмотреть журнал Обслуживания"
        android:id="@+id/btnShow_STO"
        android:layout_below="@+id/btnShow_AZS"
        android:layout_centerHorizontal="true"
        android:onClick="onClickMain" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Выход"
        android:id="@+id/btnExit"
        android:onClick="onClickExit"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Топливный калькулятор"
        android:id="@+id/btnOil_calc"
        android:onClick="onClickMain"
        android:layout_below="@+id/btnShow_STO"
        android:layout_alignLeft="@+id/btnShow_STO"
        android:layout_alignStart="@+id/btnShow_STO" />
</RelativeLayout>
